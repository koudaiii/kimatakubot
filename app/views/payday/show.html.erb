<%- model_class = Payday -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @payday.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:twitter_acount_name) %>:</strong></dt>
  <dd><%= @payday.twitter_acount_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payday) %>:</strong></dt>
  <dd><%= @payday.payday %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              payday_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_payday_path(@payday), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              payday_path(@payday),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
